{
  "name": "@jakzo/things",
  "version": "0.0.1",
  "description": "A monorepo full of JS packages and things.",
  "private": true,
  "license": "MIT",
  "homepage": "https://github.com/jakzo/things",
  "repository": {
    "type": "git",
    "url": "https://github.com/jakzo/things.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "dev": "yarn build:watch",
    "build": "ttsc -b",
    "build:watch": "yarn build -w",
    "format": "prettier -c '**/*.{ts,tsx,js,jsx,json,md}'",
    "format:fix": "yarn format --write",
    "lint": "ts-node -C ttypescript ./src/project-config/bin/project-config.ts lint",
    "lint2": "eslint --ext ts,tsx,js,jsx ./",
    "lint:fix": "yarn lint --fix",
    "typecheck": "yarn build",
    "typecheck:watch": "yarn typecheck -w",
    "test": "run-s lint format typecheck test:unit",
    "test:unit": "jest --runInBand",
    "test:unit:watch": "yarn test:unit --watch",
    "test:unit:debug": "yarn run --inspect jest --runInBand --watch",
    "lint-staged": "lint-staged",
    "publish": "node ./build/src/package-splitter/bin/package-splitter.js publish -b ./build/src/ -p '@jakzo/'"
  },
  "engines": {
    "node": "12",
    "yarn": "~1.19"
  },
  "lint-staged": {
    "**/*.ts": [
      "prettier -l"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "workspaces": {
    "packages": [
      "packages/*/*",
      "packages/*"
    ]
  },
  "dependencies": {
    "@babel/core": "^7.8.4",
    "@babel/generator": "^7.8.4",
    "@babel/parser": "^7.8.4",
    "@babel/traverse": "^7.8.4",
    "@babel/types": "^7.8.3",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/eslint": "^6.1.8",
    "@types/fs-extra": "^8.0.1",
    "@types/jest": "^24.0.13",
    "@types/jsesc": "^2.5.0",
    "@types/lodash": "^4.14.147",
    "@types/mz": "^0.0.32",
    "@types/node": "^12.0.4",
    "@types/prettier": "^1.18.3",
    "@types/react": "^16.9.19",
    "@types/semver": "^6.2.0",
    "@typescript-eslint/eslint-plugin": "^2.3.2",
    "@typescript-eslint/parser": "^2.3.2",
    "chalk": "^3.0.0",
    "depcheck": "^0.9.1",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.18.0",
    "fs-extra": "^8.1.0",
    "glob": "^7.1.6",
    "glob-gitignore": "^1.0.14",
    "globby": "^10.0.1",
    "golden-fleece": "^1.0.9",
    "ignore": "^5.1.4",
    "isomorphic-git": "^0.78.3",
    "jest": "^24.8.0",
    "jsesc": "^2.5.2",
    "lint-staged": "^9.2.5",
    "load-source-map": "^1.0.0",
    "lodash": "^4.17.15",
    "mem": "^6.0.0",
    "mz": "^2.7.0",
    "npm-run-all": "^4.1.5",
    "p-limit": "^2.2.1",
    "parse-gitignore": "^1.0.1",
    "prettier": "^1.17.1",
    "react": "^16.12.0",
    "require-package-name": "^2.0.1",
    "resolve": "^1.13.1",
    "semver": "^7.1.1",
    "simple-git": "^3.15.0",
    "snake-case": "^2.1.0",
    "source-map": "^0.7.3",
    "source-map-resolve": "^0.5.2",
    "source-map-url": "^0.4.0",
    "tempy": "^0.3.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.6.2",
    "ts-node-dev": "^1.0.0-pre.39",
    "ts-transformer-keys": "^0.4.1",
    "tslib": "^1.10.0",
    "ttypescript": "^1.5.10",
    "type-fest": "^0.8.1",
    "typescript": "^3.7.5",
    "typescript-is": "^0.13.1",
    "yargs": "^15.0.2"
  },
  "devDependencies": {
    "@yarnpkg/pnpify": "^2.0.0-rc.20",
    "husky": "^4.2.5"
  }
}
